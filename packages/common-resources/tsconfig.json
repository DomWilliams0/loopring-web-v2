{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "noUnusedLocals": true,
    "noUnusedParameters": true,  
    "baseUrl": "./static-resources/src",
    "rootDir": "./src"
  },
  "include": [
    "static-resources/src",
    "src/**/*.json",
    "src/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "example",
    "rollup.config.js"
  ]
}
