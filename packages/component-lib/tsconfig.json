{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,  
    "baseUrl": "./src",
    "rootDir": "./src",
  },
  "include": [
    "src",
    "src/**/*.json",
    "src/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "example",
    "rollup.config.js"
  ]
}
